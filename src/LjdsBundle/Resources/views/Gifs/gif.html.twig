<div class="gifItem row">
    <div class="gifInfos">
        <div>
            {% if gif.label is not null and gif.label != 'Ã©tudiant' %}
                <div class="gifLabel">{{ gif.label }}</div>
                <br />
            {% endif %}
            {{ gif.publishDate|relativeDate }}
            <br />
            <a href="{{ path('submitter', { 'submitter': gif.submittedBy }) }}">{{ gif.submittedBy }}</a><br /><br />
        </div>
        <div class="fb-like" data-href="{{ path('gif', {'permalink': gif.permalink}) }}" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
        {% if gif.source != '' %}
            <a href="{{ gif.source }}" target="_blank" class="actionIconContainer">
                <span class="actionIconText">Source du gif</span> <span class="gifSourceIcon"></span>
            </a>
            <a href="#" class="actionIconContainer">
                <span class="actionIconText report" data-id="{{ gif.id }}">Signaler ce gif</span> <span class="reportGifIcon"></span>
            </a>
        {% endif %}
    </div>
    <div class="gifMain">
        <a href="{{ path('gif', {'permalink': gif.permalink}) }}" class="gifLink">
            <div class="catchPhrase">{{ gif.catchPhrase }}</div>
            <img src="{{ gif.fileName }}" alt="{{ gif.catchPhrase }}" />
        </a>
    </div>
</div>
