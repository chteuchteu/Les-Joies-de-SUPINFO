{% extends 'LjdsBundle:Default:parent.html.twig' %}

{% block title %}Top contributeurs - {% endblock %}
{% block content %}
	<div class="col-md-1"></div>
    <div class="col-md-10 topSubmitters">
        <h1>Top contributeurs</h1>

        <ol>
            {% for item in submitters %}
                {% if item.submitter != '' %}
                    <li>
                        <a href="{{ path('submitter', {'submitter': item.submitter}) }}">{{ item.submitter }}</a>
                        <span> - {{ item.likes }} like{% if item.likes > 1 %}s{% endif %}</span>
                        <span> - {{ item.gifs|length }} gif{% if item.gifs|length > 1 %}s{% endif %}</span>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    </div>
{% endblock %}
